@model FoodCreateDto
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>  
            <div class="form-group">
                <label asp-for="FoodCategoryID" class="control-label">Kateqoriya</label>
                <select asp-for="FoodCategoryID" class="form-control">
                    @foreach (var item in ViewData["FoodCategorie"] as IEnumerable<FoodCategoryDto>)
                    {
                        <option value="@item.ID">@item.Category</option>
                    }
                </select>
            </div>
            
            <div class="form-group">
                <label asp-for="Photo" class="control-label">Şəkil</label>
                <input asp-for="Photo" class="form-control" type="file" />
                <span asp-validation-for="Photo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="@DefaultConstantValue.ADD_MESSAGE" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@DefaultConstantValue.RETURN_TO_BACK</a>
</div>
